DOMAIN=service.com
SUBDOMAIN=time

# User credentials
USERNAME=<user>
PASSWORD=<pass>

# Days of week to run (cron format: 0=Sunday, 1=Monday, ..., 6=Saturday)
WORK_DAYS=1-5

# Start times for work and break
START_WORK_MIN=7:30
START_WORK_MAX=8:30
START_BREAK_MIN=11:45
START_BREAK_MAX=12:30

# Minimum durations for work and break
MIN_WORK_DURATION=8.5h
MAX_WORK_DURATION=9.5h
MIN_BREAK_DURATION=0.75h
MAX_BREAK_DURATION=1.25h

# Optional work task name
TASK=""

# Notification settings
WEBHOOK_URL=https://discord.com/api/webhooks/a/b/c

# Calendars
HOLIDAY_ADDRESS=https://public.calendar.com/holidays.ics
VACATION_ADDRESS=https://private.calendar.com/calendar.ics
VACATION_KEYWORD=Vacation

# Additional settings
VERBOSE=false
DRY_RUN=false
STATE_FILE=/app/state.json